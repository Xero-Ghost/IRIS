# IRIS Backend Environment Variables
# Copy this file to .env and fill in your values

# ============ DATABASE CONFIGURATION ============
# Option 1: Use DATABASE_URL (Render, Heroku, etc.)
# DATABASE_URL=postgresql://user:password@host:5432/database_name

# Option 2: Use individual variables (local development)
DB_USER=postgres
DB_PASSWORD=your_password
DB_HOST=localhost
DB_NAME=iris_db

# ============ CORS CONFIGURATION ============
# Comma-separated list of allowed origins for production
# Leave as * for development, set specific domains for production
# Example: ALLOWED_ORIGINS=https://your-app.vercel.app,https://your-custom-domain.com
ALLOWED_ORIGINS=*

# ============ ROBOFLOW CONFIGURATION ============
# Required for accident detection feature (CV scripts only)
ROBOFLOW_API_KEY=your_roboflow_api_key
ROBOFLOW_MODEL_ID=accident-detection-model
ROBOFLOW_MODEL_VERSION=2
ACCIDENT_CONFIDENCE_THRESHOLD=0.5

# ============ APPLICATION SETTINGS ============
# Set to 'production' in deployed environment
ENVIRONMENT=development
